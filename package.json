{
  "name": "webtrees-theme-rural",
  "version": "2.0.0",
  "description": "Rural theme for webtrees",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jon48/webtrees-theme-rural.git"
  },
  "author": "Jonathan Jaubart",
  "license": "GPL-3.0-or-later",
  "homepage": "https://github.com/jon48/webtrees-theme-rural#readme",
  "scripts": {
    "webtrees": "npx mix --mix-config=webpack.mix.webtrees.js",
    "rural": "npx mix --mix-config=webpack.mix.rural.js",
    "watch": "npx mix watch --mix-config=webpack.mix.rural.js",
    "development": "npm run webtrees && npm run rural",
    "production": "npm run webtrees && npm run rural -- --production",
    "eslint": "semistandard --verbose | snazzy",
    "eslint-fix": "semistandard --verbose --fix | snazzy",
    "stylelint": "stylelint \"src/**/*.scss\" --rd",
    "stylelint-fix": "stylelint \"src/**/*.scss\" --rd --fix"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "clean-webpack-plugin": "^4.0.0",
    "laravel-mix": "^6.0.19",
    "laravel-mix-clean": "^0.1.0",
    "postcss": "^8.3.0",
    "postcss-custom-properties": "^13.2.0",
    "postcss-image-inliner": "^7.0.0",
    "postcss-import": "^16.1.0",
    "postcss-rtlcss": "^5.1.0",
    "sass": "^1.34.0",
    "sass-loader": "^14.1.1",
    "stylelint": "^16.3.0",
    "stylelint-config-sass-guidelines": "^11.1.0",
    "stylelint-config-standard": "^36.0.0",
    "webpack": "^5.37.1",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "bootstrap": "5.3.3"
  },
  "browserslist": [
    ">0.1% and not dead"
  ]
}
